<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add New Historic Site</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/items/add' }) %>

    <div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Add New Historic Site</h1>

      <form action="/items/add" method="POST" enctype="multipart/form-data" class="space-y-4">

        <div>
          <label class="block font-semibold">Site ID</label>
          <input type="text" name="siteId" required class="w-full p-2 border rounded" />
        </div>

        <div>
          <label class="block font-semibold">Site Name</label>
          <input type="text" name="site" required class="w-full p-2 border rounded" />
        </div>

        <div>
          <label class="block font-semibold">Description</label>
          <textarea name="description" rows="4" required class="w-full p-2 border rounded"></textarea>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block font-semibold">Date</label>
            <input type="number" name="date" required class="w-full p-2 border rounded" />
          </div>
          <div>
            <label class="block font-semibold">Date Type</label>
            <input type="text" name="dateType" required class="w-full p-2 border rounded" />
          </div>
        </div>

        <div>
          <label class="block font-semibold">Image Upload</label>
          <input type="file" name="image" accept="image/*" class="w-full" />
        </div>

        <div>
          <label class="block font-semibold">Location</label>
          <input type="text" name="location" required class="w-full p-2 border rounded" />
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block font-semibold">Latitude</label>
            <input type="number" step="any" name="latitude" required class="w-full p-2 border rounded" />
          </div>
          <div>
            <label class="block font-semibold">Longitude</label>
            <input type="number" step="any" name="longitude" required class="w-full p-2 border rounded" />
          </div>
        </div>

        <div>
          <label class="block font-semibold">Designated Year</label>
          <input type="number" name="designated" required class="w-full p-2 border rounded" />
        </div>

        <div>
          <label class="block font-semibold">Province / Territory</label>
          <select name="provinceOrTerritoryCode" required class="w-full p-2 border rounded">
            <option value="">-- Select Province/Territory --</option>
            <% provinces.forEach(p=> { %>
              <option value="<%= p.code %>">
                <%= p.name %>
              </option>
              <% }) %>
          </select>
        </div>

        <div class="text-center">
          <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600">
            Add Site
          </button>
        </div>

      </form>
    </div>
</body>

</html>